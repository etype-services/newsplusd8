<p id="the_message" class="PicoRule">Please wait while we check
    access.</p>
<script src="/modules/custom/etype/modules/etype_pico/js/crypto-js.js"></script>
<script src="/modules/custom/etype/modules/etype_pico/js/Encryption.js"></script>
<script type="text/javascript">
    window.addEventListener('pico.loaded', function() {
        if (window.Pico.user.verified === true) {
            let encryption = new Encryption();
            window.location.href = encryption.decrypt('{{ url }}', 'pico_key');
        } else {
            window.location.href = "/";
        }
    })
</script>